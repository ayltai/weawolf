{
    "name": "weawolf",
    "description": "A gorgeous weather app for your Mac, Linux, and Windows",
    "version": "1.0.0",
    "author": {
        "name": "Alan Tai"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ayltai/weawolf.git"
    },
    "bugs": {
        "url": "https://github.com/ayltai/weawolf/issues"
    },
    "license": "MIT",
    "keywords": [
        "weather"
    ],
    "homepage": "./",
    "main": "public/electron.js",
    "scripts": {
        "codecov": "codecov",
        "build": "cross-env SKIP_PREFLIGHT_CHECK=true react-scripts build",
        "eject": "react-scripts eject",
        "electron": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
        "pretest": "eslint src/**/*.{js,jsx} public/**/*.js",
        "test": "cross-env SKIP_PREFLIGHT_CHECK=true react-scripts test --watchAll=false --ci --no-watchman --coverage",
        "start": "cross-env BROWSER=none SKIP_PREFLIGHT_CHECK=true react-scripts start",
        "postinstall": "electron-builder install-app-deps",
        "package:mac": "electron-builder build --mac --publish never",
        "package:nix": "electron-builder build --linux --publish never",
        "package:win": "electron-builder build --win --publish never"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.10",
        "@testing-library/react": "^11.2.5",
        "@testing-library/user-event": "^13.0.13",
        "@wojtekmaj/enzyme-adapter-react-17": "^0.6.0",
        "codecov": "^3.8.1",
        "concurrently": "^6.0.0",
        "cross-env": "^7.0.3",
        "electron": "^11.4.1",
        "electron-builder": "^22.10.5",
        "electron-devtools-installer": "^3.1.1",
        "enzyme": "^3.11.0",
        "eslint": "^7.22.0",
        "eslint-plugin-react": "^7.23.1",
        "jest-fetch-mock": "^3.0.3",
        "nock": "^13.0.11",
        "react-scripts": "^4.0.3",
        "react-test-renderer": "^17.0.2",
        "wait-on": "^5.3.0"
    },
    "dependencies": {
        "@material-ui/core": "^4.11.3",
        "@material-ui/icons": "^4.11.2",
        "@material-ui/lab": "^4.0.0-alpha.57",
        "chart.js": "^2.9.4",
        "dotenv": "^8.2.0",
        "electron-is-dev": "^2.0.0",
        "i18next": "^20.1.0",
        "lodash.throttle": "^4.1.1",
        "menubar": "^9.0.3",
        "moment": "^2.29.1",
        "prop-types": "^15.7.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-i18next": "^11.8.11",
        "react-router-dom": "^5.2.0",
        "superagent": "^6.1.0",
        "unsplash-js": "^7.0.8"
    },
    "build": {
        "appId": "com.github.ayltai.weawolf",
        "productName": "Weawolf",
        "extends": "react-cra",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "linux": {
            "category": "Utility"
        },
        "mac": {
            "icon": "design/mac.icns",
            "category": "public.app-category.weather",
            "darkModeSupport": true
        },
        "win": {
            "icon": "design/win.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "license": "LICENSE",
            "deleteAppDataOnUninstall": true
        },
        "appImage": {
            "license": "LICENSE"
        },
        "publish": {
            "provider": "github",
            "repo": "weawolf",
            "owner": "ayltai"
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "jest": {
        "moduleNameMapper": {
            "electron": "<rootDir>/src/components/mocks/electron.js"
        }
    },
    "engines": {
        "node": ">=14"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
